<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    tools:ignore="UnusedAttribute" >

    <LinearLayout
        android1:layout_width="match_parent"
        android1:layout_height="match_parent"
        android1:gravity="center_vertical|fill"
        android1:orientation="vertical" >

        
            <FrameLayout
                android1:id="@+id/frameLayout1"
               android1:layout_width="match_parent"
               android:layout_marginBottom="4dp"
            android1:layout_height="wrap_content">

                 <RelativeLayout
                     android1:layout_width="match_parent"
                     android1:layout_height="295dp" >

                     <TextView
                         android1:id="@+id/textView1"
                         android1:layout_width="wrap_content"
                         android1:layout_height="wrap_content"
                         android1:layout_alignLeft="@+id/imageButton1"
                         android1:layout_alignParentTop="true"
                         android1:text="Ayush"
                         android1:textColor="@color/red"
                         android1:textSize="40dp" />

                     <ImageView
                         android1:id="@+id/imageView1"
                         android1:layout_width="200dp"
                         android1:layout_height="200dp"
                         android1:layout_alignParentLeft="true"
                         android1:layout_alignParentTop="true"
                         android1:src="@drawable/aaa" />

                     <ImageButton
                         android1:id="@+id/imageButton2"
                         android1:layout_width="wrap_content"
                         android1:layout_height="wrap_content"
                         android1:layout_alignParentBottom="true"
                         android1:layout_alignRight="@+id/imageView1"
                         android1:layout_marginRight="18dp"
                         android1:src="@drawable/call" />

                     <ImageButton
                         android1:id="@+id/imageButton1"
                         android1:layout_width="100dp"
                         android1:layout_height="100dp"
                         android1:layout_alignParentBottom="true"
                         android1:layout_marginBottom="14dp"
                         android1:layout_toRightOf="@+id/imageView1"
                        
                         android1:src="@drawable/facebook" />

                 </RelativeLayout>
       
            </FrameLayout>

           

      
    </LinearLayout>

</ScrollView>